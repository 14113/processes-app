<h1><%= @trip.name %></h1>
<ul class="list-group">
  <% @trip.todos.each_with_index do |todo, index| %>
    <li class="list-group-item">
      <h5 class="list-group-item-heading"><%= index + 1 %>. <%= todo.name %></h5>
      <p class="list-group-item-text"><%= auto_link todo.description %></p>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Destroy', @trip, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', trips_path %>
